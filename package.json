{
  "name": "pebble-dashboard",
  "version": "0.6.0-beta3",
  "description": "Custom dashboard for Home Assistant",
  "main": "index.js",
  "scripts": {
    "start": "rollup -c --watch",
    "build": "rollup -c",
    "start:hass": "docker run --rm -p8123:8123 -v ${PWD}/.hass_dev:/config homeassistant/home-assistant:beta",
    "format": "prettier --print-width 100 --write .",
    "test": "jest",
    "test:watch": "jest --watch"
  },
  "author": "Damien Angelos",
  "repository": {
    "type": "git",
    "url": "https://github.com/bostaunieux/ha-pebble-dashboard"
  },
  "license": "MIT",
  "engines": {
    "node": ">=18.18.0"
  },
  "overrides": {
    "@rollup/plugin-eslint": {
      "eslint": "$eslint"
    }
  },
  "dependencies": {
    "@mdi/js": "^7.4.47",
    "date-fns": "^3.6.0",
    "home-assistant-js-websocket": "^9.2.1",
    "lit": "^3.1.3"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.3.1",
    "@eslint/js": "^9.35.0",
    "@lit-labs/compiler": "^1.0.3",
    "@rollup/plugin-commonjs": "^28.0.6",
    "@rollup/plugin-eslint": "^9.0.5",
    "@rollup/plugin-json": "^6.1.0",
    "@rollup/plugin-node-resolve": "^16.0.1",
    "@rollup/plugin-terser": "^0.4.4",
    "@rollup/plugin-typescript": "^12.1.4",
    "@types/jest": "^30.0.0",
    "eslint": "^9.35.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-lit": "^2.1.1",
    "eslint-plugin-lit-a11y": "^5.1.1",
    "eslint-plugin-wc": "^3.0.1",
    "globals": "^16.4.0",
    "jest": "^30.2.0",
    "jiti": "^2.0.0",
    "prettier": "^3.2.5",
    "rollup": "^4.16.1",
    "rollup-plugin-serve": "^3.0.0",
    "ts-jest": "^29.4.4",
    "tslib": "^2.6.2",
    "typescript": "^5.4.5",
    "typescript-eslint": "^8.43.0"
